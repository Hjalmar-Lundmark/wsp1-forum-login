{% extends "layout.njk" %}
{% block content %}
<main>
    <h1>Hello {{ user }}</h1>
    <ul>
        <li>
            <div class="postContent">
                <h2>{{ user }}'s {{ title }}</h2>
                {{ info[0].Desc }} <br>
                <a href="/bio">Update bio</a>
                <h6>Account created: {{ info[0].createdAt }}</h6>
            </div>
        </li>
    </ul>
    <div class="pButtons">
        <form action="/logout" method="POST" class="pForm">
            <button type="submit" id="logout">Logout</button>
        </form>
        <form action="/delete" method="POST" class="pForm deleteButton">
            <button type="submit">Delete Account</button>
        </form>
    </div>
</main>
{% endblock %}