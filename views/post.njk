{% extends "layout.njk" %}
{% block  content %}

<div class="post">
    User: {{ post[0][0].authorId }}{{ post[0][0].name }}
    <h2>{{ post[0][0].title }}</h2> 
    <p>{{ post[0][0].content }}</p> 
    <h6>Posted {{ post[0][0].createdAt }}</h6>
</div>
{% for comments in comments %}
<div class="comment">
    User: {{ comments[0].authorId }}
    <p>{{ comments[0].content }}</p>
</div>
{% endfor %}
{% endblock %}