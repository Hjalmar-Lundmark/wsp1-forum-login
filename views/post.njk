{% extends "layout.njk" %}
{% block content %}

<div class="post">
    <div class="postContent">
        <p>User: <a href="/user/{{ post.authorId }}">{{ post.name }}</a></p>
        <h2>{{ post.title }}</h2>
        <p>{{ post.content }}</p>
        <h6>Posted {{ post.createdAt }}</h6>
    </div>
</div>

{% for row in comments %}
<div class="comment">
    <div class="postContent">
        <p>User: <a href="/user/{{ row.authorId }}">{{ row.name }}</a></p>
        <p>{{ row.content }}</p>
        <h6>Posted {{ row.date }}</h6>
    </div>
</div>
{% endfor %}
{% endblock %}